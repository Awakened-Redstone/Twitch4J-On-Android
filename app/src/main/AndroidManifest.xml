<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.t4jandroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.T4JAndroid">
        <activity
            android:name="com.example.t4jandroid.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.T4JAndroid.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.t4jandroid.SettingsActivity"
            android:parentActivityName="com.example.t4jandroid.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.T4JAndroid.NoActionBar"/>
    </application>

</manifest>